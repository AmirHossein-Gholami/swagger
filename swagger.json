swagger: "2.0"
info:
  title: Aparat API
  description: Sample Aparat API
  version: 1.0.1
host: 192.168.1.210:5000
basePath: /
tags:
  - name: channels
    description: Everything about channels
  - name: videos
    description: Everything about video
schemes:
  - http
paths:
  /channels:
    get:
      tags:
        - channels
      summary: Returns a list of users.
      produces:
        - application/json
      responses:
        200:
          description: OK
  /add/channel:
    post:
      tags:
        - channels
      summary: Add a new channel.
      consumes:
        - application/json
      produces:
        - application/json
      parameters:
        - name: channel
          in: body
          description: Channel object
          required: true
          schema:
            $ref: "#/definitions/Channel"
      responses:
        200:
          description: OK
  /video:
    get:
      tags:
        - videos
      summary: Returns a list of channels.
      produces:
        - application/json
      responses:
        200:
          description: OK
definitions:
  Channel:
    type: object
    properties:
      username:
        type: string
